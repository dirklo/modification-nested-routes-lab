<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <% if !@artist %>
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %>
    <%= collection_select :song, :artist_id, Artist.all, :id, :name %>
  <% else %>
    <%= hidden_field_tag "song[artist_id]", @artist.id %>
  <% end %>
  <br />

  <%= f.submit %>
<% end %>
